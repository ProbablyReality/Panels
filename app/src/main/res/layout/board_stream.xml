<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPanel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Board Title"
        android:id="@+id/boardTitle"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-04-28 18:24:20"
        android:id="@+id/boardTime"
        android:textSize="12dp"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/created"
        android:layout_toEndOf="@+id/created"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        android:id="@+id/members"
        android:textSize="12dp"
        android:textColor="#333333"
        android:layout_below="@+id/panels"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panels"
        android:id="@+id/panels"
        android:textSize="12dp"
        android:textColor="#333333"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/panelCount"
        android:textSize="12dp"
        android:textColor="@color/colorAccent"
        android:layout_toLeftOf="@+id/panels"
        android:layout_toStartOf="@+id/panels"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/memberCount"
        android:textSize="12dp"
        android:textColor="@color/colorAccent"
        android:layout_toLeftOf="@+id/members"
        android:layout_alignTop="@+id/members"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created"
        android:id="@+id/created"
        android:textSize="12dp"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/boardTitle"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp" />

</RelativeLayout>