<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.panels" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".BoardView" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreatePanel"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ViewPanel" />
        <activity
            android:name=".CreateBoard"
            android:windowSoftInputMode="adjustResize" />

        <android.database.sqlite android:name="ManageSQL" />

        <activity android:name=".DiscoverBoards" />
        <activity
            android:name=".CreateComment"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>